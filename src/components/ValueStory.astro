---
import overrides from '../data/overrides.json';

const valueProjects = overrides.projects.filter((p: any) => p.valueStory);
---

<section class="max-w-6xl mx-auto px-4 sm:px-6 py-16">
  <div class="text-center mb-12">
    <h2 class="text-3xl font-bold mb-3">
      <span class="gradient-text">价值创造</span>
    </h2>
    <p class="text-surface-500 dark:text-surface-400 max-w-lg mx-auto">
      不只是写代码 — 解决真实问题，创造可衡量的价值
    </p>
  </div>

  <div class="grid gap-6 md:grid-cols-3">
    {valueProjects.map((project: any) => (
      <div class="glass rounded-2xl p-6 card-hover flex flex-col">
        <h3 class="text-lg font-bold mb-4 text-surface-900 dark:text-white">
          {project.name}
        </h3>

        <div class="space-y-4 flex-1">
          <div>
            <div class="flex items-center gap-2 mb-1.5">
              <span class="w-5 h-5 rounded-full bg-red-100 dark:bg-red-900/30 flex items-center justify-center text-xs">❌</span>
              <span class="text-xs font-semibold text-red-600 dark:text-red-400 uppercase tracking-wide">痛点</span>
            </div>
            <p class="text-sm text-surface-600 dark:text-surface-400">{project.valueStory.problem}</p>
          </div>

          <div>
            <div class="flex items-center gap-2 mb-1.5">
              <span class="w-5 h-5 rounded-full bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center text-xs">💡</span>
              <span class="text-xs font-semibold text-blue-600 dark:text-blue-400 uppercase tracking-wide">方案</span>
            </div>
            <p class="text-sm text-surface-600 dark:text-surface-400">{project.valueStory.solution}</p>
          </div>

          <div>
            <div class="flex items-center gap-2 mb-1.5">
              <span class="w-5 h-5 rounded-full bg-green-100 dark:bg-green-900/30 flex items-center justify-center text-xs">✅</span>
              <span class="text-xs font-semibold text-green-600 dark:text-green-400 uppercase tracking-wide">成果</span>
            </div>
            <p class="text-sm text-surface-600 dark:text-surface-400">{project.valueStory.result}</p>
          </div>
        </div>

        <a
          href={`/projects/${project.slug}`}
          class="mt-5 inline-flex items-center gap-1 text-sm font-medium text-primary-600 dark:text-primary-400 hover:text-primary-700"
        >
          查看详情
          <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
    ))}
  </div>
</section>
